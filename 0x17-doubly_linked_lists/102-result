#!/usr/bin/python3
def is_palindrome(n):
    return (str(n) == str(n)[::-1])

def largest_palindrome():
    largest = 0
    for i in range(100, 1000):
        for j in range(i, 1000):
            product = i * j
            if is_palindrome(product) and product > largest:
                largest = product
                return (largest)

            result = largest_palindrome()

            with open('102-result', 'w') as f:
                f.write(str(result))
