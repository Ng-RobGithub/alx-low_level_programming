CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
	NAME = holberton

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

clean:
	rm -f *~

oclean:
	rm -f $(OBJ)

fclean: clean oclean
	rm -f $(NAME)

re: fclean all
